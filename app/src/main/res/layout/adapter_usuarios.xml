<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/lblUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuário"
            android:textSize="14dp"
            android:textColor="@color/colorSecondaryText"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_below="@+id/lblHorarios"
            android:layout_toEndOf="@+id/imgUsuario"
            android:layout_marginStart="13dp" />

        <TextView
            android:id="@+id/lblAnotacoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anotações"
            android:textSize="14dp"
            android:textColor="@color/colorSecondaryText"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:layout_below="@+id/lblUsuario"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/lblHorarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horários"
            android:textSize="14dp"
            android:textColor="@color/colorSecondaryText"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/lblAnotacoes" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgUsuario"
            android:src="@mipmap/ic_launcher"
            android:adjustViewBounds="false"
            android:minHeight="55dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>